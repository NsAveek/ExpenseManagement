<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/colorSelectorArrowLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        app:srcCompat="@drawable/ic_chevron_left_black"/>
    <View
        android:id="@+id/selectedColor"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="14dp"/>
    <ImageView
        android:id="@+id/colorSelectorArrowRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        app:srcCompat="@drawable/ic_chevron_right_black"/>
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/colorEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enabled"
        android:layout_gravity="center_vertical"
        />

</merge>
